<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:id="@+id/splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">
    <ImageView
        android:id="@+id/loot_icon"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerVertical="true"
        android:src="@drawable/loot_icon"/>
    <TextView
        android:id="@+id/splash_welcome"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/loot_icon"
        android:textColor="@color/colorDefault"
        android:textSize="76dp"
        android:text="Loot" />
    </RelativeLayout>
    <TextView
        android:id="@+id/splash_text"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splash_screen"
        android:textColor="@color/colorDefault"
        android:textSize="16dp"
        android:text="Your Money is Safe With Us." />
</RelativeLayout>
