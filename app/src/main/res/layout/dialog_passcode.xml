<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/enter_layout_old_passcode"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true">
        <EditText
            android:id="@+id/dialog_old_passcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:hint="Enter Old Passcode"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/enter_layout_passcode_one"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true">
        <EditText
            android:id="@+id/dialog_passcode_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:hint="Enter New Passcode"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/enter_layout_passcode_two"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true">
        <EditText
            android:id="@+id/dialog_passcode_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:hint="Enter Passcode Again"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_gravity="right">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Cancel"
            android:background="@null"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:id="@+id/btn_Cancel"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="14dp"
            android:text="Submit"
            android:background="@null"
            android:textColor="@color/colorAccent"
            android:id="@+id/btn_Submit"/>
    </LinearLayout>
</LinearLayout>